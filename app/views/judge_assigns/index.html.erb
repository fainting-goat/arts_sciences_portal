<p id="notice"><%= notice %></p>

<h1>Judge Assigns</h1>

<table>
  <thead>
    <tr>
      <th>Judge</th>
      <th>Entry</th>
      <th>Timeslot</th>
      <th>Assigned</th>
      <th>Shadow</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @judge_assigns.each do |judge_assign| %>
      <tr>
        <td><%= judge_assign.user.email %></td>
        <td><%= judge_assign.entry.entry_name %></td>
        <td><%= judge_assign.timeslot.description %></td>
        <td><%= judge_assign.assigned %></td>
        <td><%= judge_assign.shadow %></td>
        <td><%= link_to 'Show', judge_assign %></td>
        <td><%= link_to 'Edit', edit_judge_assign_path(judge_assign) %></td>
        <td><%= link_to 'Destroy', judge_assign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

