<p id="notice"><%= notice %></p>

<h1>Criteria</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Criteria type</th>
      <th>Category</th>
      <th>Suggested Score</th>
      <th>Optional</th>
      <th>Animal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criteria.each do |criterium| %>
      <tr>
        <td><%= criterium.description %></td>
        <td><%= criterium.criteria_type.description %></td>
        <td><%= criterium.category.name %></td>
        <td><%= criterium.suggested_score %></td>
        <td><%= criterium.optional %></td>
        <td><%= criterium.animal %></td>
        <td><%= link_to 'Show', criterium %></td>
        <td><%= link_to 'Edit', edit_criterium_path(criterium) %></td>
        <td><%= link_to 'Destroy', criterium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Criterium', new_criterium_path %>
