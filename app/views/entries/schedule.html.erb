<p id="notice"><%= notice %></p>

<h1>Schedule</h1>
<%= form_tag schedule_entries_path, method: :post do |form| %>

  <table>
    <thead>
    <tr>
      <th>Entry</th>
      <% Timeslot.all.in_order.each do |timeslot| %>
        <th><%= timeslot.description %></th>
      <% end %>
    </tr>
    </thead>

    <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.description %></td>
        <%= fields_for "entries[]", entry do |form| %>
          <%= render partial: 'bulk_update_entry_timeslot', locals: {form: form, entry: entry} %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <p>
    <%= submit_tag("Submit") %>
  </p>
<% end %>

<br>  <%= link_to 'Back', entries_path %>
