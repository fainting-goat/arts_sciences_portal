<table>
  <thead>
  <tr>
    <th>Entry name</th>
    <th>Timeslot</th>
    <th>Room</th>
    <th>Fair</th>
    <th>Judging Options</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% entries.each do |entry| %>
    <tr>
      <td><%= entry.entry_name %></td>
      <td><%= entry.timeslot_description %></td>
      <td><%= entry.location_description %></td>
      <td><%= entry.fair.name %></td>
      <td>
        <ul>
          <li><%= entry.in_person_option  %></li>
          <li><%= entry.scored_option %></li>
        </ul>
      </td>
      <td><%= link_to 'View Details', entry %></td>
      <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
      <% if current_user.admin? %>
        <td><%= link_to 'Delete Entry', entry, method: :delete, data: { confirm: 'This will delete all associated judge assignments, group entrants, and scoresheets.  Are you sure?' } %></td>
      <% end %>
      <td><%= link_to 'Add Group Entrants', entry_user_entries_path(entry) %></td>
    </tr>
  <% end %>
  </tbody>
</table>