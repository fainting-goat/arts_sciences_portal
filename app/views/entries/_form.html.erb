<%= form_with(model: entry, local: true) do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if Fair.all.empty? %>
    <div class="alert alert-danger">
      <h4>There are no active fairs at this time.  You will not be able to submit an entry.</h4>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :entry_name %>
    <%= form.text_field :entry_name, size: "50x1" %>
  </div>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description, size: "80x10"  %>
  </div>

  <div class="field">
    <%= form.label :materials_used %><br>
    <%= form.text_field :materials, size: "80x1" %>
  </div>

  <div class="field">
    <%= form.label :culture %><br>
    <%= form.text_field :culture, size: "80x1" %>
  </div>

  <div class="field">
    <%= form.label :time_period %><br>
    <%= form.text_field :time_period, size: "80x1" %>
  </div>

  <br>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category_id, Category.all.default_order.map{ |m| ["#{m.division.name} - #{m.name}", m.id] }%>
  </div>

  <div id="entry_category_desc">
    <p><%= simple_format Category.default_order.first.description %></p>
    <p id="mail_in_warning"></p>
  </div>

  <div class="field">
    <%= form.label :fair %>
    <%= form.select :fair_id, Fair.all.in_order.map{ |m| [m.name, m.id] }, disabled: Fair.where(entries_allowed: false).pluck(:id) %>
  </div>

  <div class="field">
    <p><%= form.radio_button :in_person, true, hidden: true %>
      <br>
    <%= form.radio_button :in_person, false, hidden: true %></p>
  </div>

  <div class="field">
    <p><%= form.radio_button :scored, true, hidden: true %>
    <br>
      <%= form.radio_button :scored, false, hidden: true %></p>
  </div>

  <div class="field">
    <%= form.check_box :pentathlon, hidden: true %>
    <%= form.label :pentathlon, hidden: true %>
  </div>

  <div class="field">
    <%= form.check_box :division, hidden: true %>
    <%= form.label :division, hidden: true %>
  </div>

  <div class="field">
    <%= form.check_box :first_time, hidden: true %>
    <%= form.label :first_time, hidden: true %>
  </div>

  <div class="field">
    <%= form.check_box :youth, hidden: true %>
    <%= form.label :youth, hidden: true %>
  </div>

  <div class="actions">
    <% if Fair.all.empty? %>
      <%= form.submit disabled: true%>
  <% else %>
      <%= form.submit %>
    <% end %>
  </div>
<% end %>
