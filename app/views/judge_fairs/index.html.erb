<%= render partial: 'layouts/navigation', locals: {enable: 'volunteer'} %>

<div class="page-header-text">Fairs Volunteered For</div>

<table class="table-auto my-8">
  <thead class="text-gray-500">
  <tr>
    <% if current_user.admin? %>
      <th>User</th>
    <% end %>
    <th>Fair</th>
    <th>Shadow Judging?</th>
    <th>First Time?</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody class="text-gray-700">
  <% @judge_fairs.each do |judge_fair| %>
    <tr>
      <% if current_user.admin? %>
        <td><%= judge_fair.user.email %></td>
      <% end %>
      <td><%= judge_fair.fair.name_with_warning %></td>
      <td><%= judge_fair.shadow_judge %></td>
      <td><%= judge_fair.first_time %></td>
      <td><%= link_to 'Un-volunteer', judge_fair, method: :delete, data: {confirm: 'Are you sure?'}, class: 'text-teal-500' %></td>
      <td><%= link_to 'Edit Volunteer Details', edit_judge_fair_path(judge_fair), class: 'text-teal-500' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Volunteer', new_judge_fair_path, class: 'important-button' %>
