<p id="notice"><%= notice %></p>

<h1>Scoresheets</h1>

<table>
  <thead>
  <tr>
    <th>Entry</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @entries.each do |entry| %>
    <tr>
      <td><%= entry.entry_name %></td>
      <td><%= link_to 'New Scoresheet', new_entry_scoresheet_path(entry) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<table>
  <thead>
  <tr>
    <th>User</th>
    <th>Entry</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @scoresheets.each do |scoresheet| %>
    <tr>
      <td><%= scoresheet.user.email %></td>
      <td><%= scoresheet.entry.entry_name %></td>
      <td><%= link_to 'Show', entry_scoresheet_path(scoresheet.entry, scoresheet) %></td>
      <td><%= link_to 'Edit', edit_entry_scoresheet_path(scoresheet.entry, scoresheet) %></td>
      <td><%= link_to 'Destroy', [scoresheet.entry, scoresheet], method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br><%= link_to 'Back', root_path %>
