<h1>Schedule</h1>

<% Timeslot.all.in_order.each do |timeslot| %>
  <h3><%= timeslot.description %></h3>

  <table>
    <thead>
    <tr>
      <th>Entry</th>
      <th>Entrants</th>
      <th>Judges</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @entries.select { |x| x.timeslot == timeslot }.each do |entry| %>
      <tr>
        <td><%= simple_format entry.entry_name %></td>
        <td><%= simple_format entry.entrant_string %></td>
        <td><%= simple_format entry.judge_name_or_unnassigned %></td>
        <td><%= simple_format entry.location_description %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<br>

<br>  <%= link_to 'Back', fairs_path %>

<br>

<script type="text/javascript">
    function printpage()
    {
        window.print()
    }
</script>

<%= link_to "Print Page", '#', onclick: "printpage()" %>
