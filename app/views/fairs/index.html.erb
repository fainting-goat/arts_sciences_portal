<p id="notice"><%= notice %></p>

<h1>Fairs</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fairs.each do |fair| %>
      <tr>
        <td><%= fair.date %></td>
        <td><%= fair.region.name %></td>
        <td><%= link_to 'Show', fair %></td>
        <td><%= link_to 'Edit', edit_fair_path(fair) %></td>
        <td><%= link_to 'Destroy', fair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fair', new_fair_path %>
