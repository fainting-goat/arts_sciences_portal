<h2 class="text-4xl lg:text-3xl text-gray-700">Create an account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "m-2 block text-gray-700 text-4xl lg:text-sm font-bold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-2xl lg:text-base shadow appearance-none border rounded w-full py-4 px-3 lg:px-auto lg:py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "m-2 block text-gray-700 text-4xl lg:text-sm font-bold mb-2" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "text-2xl lg:text-base shadow appearance-none border rounded w-full py-4 px-3 lg:px-auto lg:py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <% if @minimum_password_length %>
      <div class="text-xl lg:text-xs text-gray-600">(<%= @minimum_password_length %> characters minimum)</div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "m-2 block text-gray-700 text-4xl lg:text-sm font-bold mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-2xl lg:text-base shadow appearance-none border rounded w-full py-4 px-3 lg:px-auto lg:py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="field">
    <%= f.label :name, class: "m-2 block text-gray-700 text-4xl lg:text-sm font-bold mb-2" %>
    <%= f.text_field :name, class: "text-2xl lg:text-base shadow appearance-none border rounded w-full py-4 px-3 lg:px-auto lg:py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="field">
    <%= f.label :sca_name, class: "m-2 block text-gray-700 text-4xl lg:text-sm font-bold mb-2" %>
    <%= f.text_field :sca_name, class: "text-2xl lg:text-base shadow appearance-none border rounded w-full py-4 px-3 lg:px-auto lg:py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="field">
    <%= f.label :region, class: "m-2 block text-gray-700 text-4xl lg:text-sm font-bold mb-2" %>
    <%= f.select :region_id, Region.all.map { |m| [m.name, m.id] }, {}, {class: "text-2xl lg:text-base shadow appearance-none border rounded w-full py-4 px-3 lg:px-auto lg:py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"} %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "Sign up", class: "bg-teal-500 hover:bg-teal-300 font-bold py-6 px-12 text-3xl lg:text-base lg:py-2 lg:px-4 rounded" %>
  </div>
<% end %>

<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-xl lg:text-xs text-gray-600" %>
