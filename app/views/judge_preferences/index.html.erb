<p id="notice"><%= notice %></p>

<h1>Your preferences as a judge</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @judge_preferences.each do |judge_preference| %>
      <tr>
        <td><%= judge_preference.category.name %></td>
        <td><%= link_to 'Remove Preference', [@user, judge_preference], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new preference', new_user_judge_preference_path(@user) %>
<br><%= link_to 'Back', @user %>
