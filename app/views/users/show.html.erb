<% if current_user.admin? && @user.id != current_user.id %>
  <div class="alert alert-danger">
    <h4>You are currently in admin mode and are viewing a user other than yourself.</h4>
  </div>
<% end %>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Region:</strong>
  <%= @user.region.name %>
</p>

<p>
  <strong>Prefers written entries?</strong>
  <%= @user.written %>
</p>

<p>
  <strong>First time judge?</strong>
  <%= @user.first_time %>
</p>

<p>If you will be judging, you can also specify what categories of entries you'd prefer to judge.</p>
<%= link_to 'Manage your judging preferences', user_judge_preferences_path(@user) %>

<hr>

<%= link_to 'Edit', edit_user_path(@user) %> |
<% if current_user.admin? %>
  <%= link_to 'Back', users_path %>
<% else %>
  <%= link_to 'Back', root_path %>
<% end %>
